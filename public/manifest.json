{
  "name": "Self Verified",
  "description": "Use web pages you trust to verify social media accounts.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup",
    "default_icon": {
      "16": "icon-192.png",
      "48": "icon-192.png",
      "128": "icon-192.png"
    }
  },
  "background": {
    "scripts": [
      "./static/js/background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icon-locked-192.png",
    "48": "icon-locked-192.png",
    "128": "icon-locked-192.png"
  }
}